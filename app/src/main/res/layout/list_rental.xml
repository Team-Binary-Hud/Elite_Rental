<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/RentalImg"
        android:layout_width="120dp"
        android:layout_height="120sp"
        app:srcCompat="@mipmap/ic_launcher" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CarNameRental"
        android:text="CarName"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_toRightOf="@+id/RentalImg"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CarPriceRental"
        android:text="Â£00.00 pm"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentRight="true"
        android:layout_below="@id/CarNameRental"
        android:layout_marginTop="3dp"
        android:layout_marginRight="15dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CarTypeRental"
        android:text="CarType"
        android:textStyle="italic"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@id/CarPriceRental"
        android:layout_toRightOf="@+id/RentalImg"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="15dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CarLocationRental"
        android:text="Location"
        android:textStyle="italic"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@id/CarTypeRental"
        android:layout_toRightOf="@+id/RentalImg"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="15dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CarManufacRental"
        android:text="Manufacturer"
        android:textStyle="italic"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@id/CarLocationRental"
        android:layout_toRightOf="@+id/RentalImg"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="15dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CarYearRental"
        android:text="2020"
        android:textStyle="italic"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@id/CarPriceRental"
        android:layout_alignParentRight="true"
        android:layout_marginTop="3dp"
        android:layout_marginRight="15dp" />
    <ImageView
        android:id="@+id/ColourImgRental"
        android:layout_width="20dp"
        android:layout_height="20sp"
        android:layout_below="@id/CarLocationRental"
        app:srcCompat="@drawable/circle"
        android:layout_alignParentRight="true"
        android:layout_marginTop="3dp"
        android:layout_marginRight="15dp"
        tools:ignore="VectorDrawableCompat" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CarColourRental"
        android:text="Colour"
        android:textStyle="italic"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@id/CarLocationRental"
        android:layout_toLeftOf="@+id/ColourImgRental"
        android:layout_marginTop="3dp"
        android:layout_marginRight="10dp" />
</RelativeLayout>